<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/unavailable_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="10dp"
    android:elevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C8C8C8"
        android:clickable="false">

        <TextView
            android:id="@+id/order_no_item_unavailable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="1"
            android:textSize="18sp" />
        <View
            android:layout_width="2dp"
            android:layout_height="30dp"
            android:background="#BABABA"
            android:layout_toRightOf="@id/order_no_item_unavailable"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_fullname_item_unavailable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_toRightOf="@id/order_no_item_unavailable"
            android:text="Sobirov Jamshid"
            android:textSize="18sp" />

        <View
            android:layout_width="2dp"
            android:layout_height="30dp"
            android:background="#BABABA"
            android:layout_toLeftOf="@id/tv_age_item_unavailable"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_age_item_unavailable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="8dp"
            android:text="20"
            android:textSize="18sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>